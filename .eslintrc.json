{
	"env": {
		"browser": true,
		"es2020": true,
		"node": true
	},
	"extends": ["airbnb", "prettier", "plugin:react/recommended"],
	"plugins": ["prettier", "react"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": "error",
		"indent": ["error", "tab"],
		"react/jsx-indent": ["error", "tab"],
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
	}
}
